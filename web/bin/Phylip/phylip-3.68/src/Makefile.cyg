.PHONY : phylipwdir phylipwxdir phylipwydir phylipw.zip phylipwx.zip phylipwy.zip

dists : dist sfx zips sfxs

sfxs : phylipw.exe phylipwx.exe phylipwy.exe

zips : phylipw.zip phylipwx.zip phylipwy.zip

phylipw.exe : phylipw.zip
	cat $(SFX_STUB) phylipw.zip > phylipw.exe \
	  && chmod 755 phylipw.exe

phylipw.zip : phylipwdir
	@rm -f phylipw.zip
	cd phylipw && zip -q -r ../phylipw.zip *
	rm -rf phylipw

phylipwdir : $(DOCS) $(SOURCES) $(ICONS)
	rm -rf phylipw
	mkdir phylipw
	mkdir phylipw/$(DISTDIR)
	mkdir phylipw/$(DISTDIR)/src
	mkdir phylipw/$(DISTDIR)/doc
	mkdir phylipw/$(DISTDIR)/exe
	mkdir phylipw/$(DISTDIR)/src/icons
	for i in $(DIST_COMMON) ; do \
	  cp $$i phylipw/$(DISTDIR) ; \
	done
	for i in $(DOCS) ; do \
	  cp $$i phylipw/$(DISTDIR)/doc ; \
	done
	for i in $(SOURCES) ; do \
	  cp $$i phylipw/$(DISTDIR)/src ; \
	done
	for i in $(ICONS) ; do \
	  cp $$i phylipw/$(DISTDIR)/src/icons ; \
	done
	@for i in $(ASCII_EXT) ; do \
	  echo "Translating newline characters on *$$i..." ; \
	  find phylipw -name "*$$i" \
	    -exec sed -i -e 's/$$/\r/g' '{}' ';' ; \
	done

phylipwx.exe : phylipwx.zip
	cat $(SFX_STUB) phylipwx.zip > phylipwx.exe \
	  && chmod 755 phylipwx.exe

phylipwx.zip : phylipwxdir
	@rm -f phylipwx.zip
	cd phylipwx && zip -q -r ../phylipwx.zip *
	rm -rf phylipwx

phylipwxdir : $(WX_EXES)
	rm -rf phylipwx
	mkdir phylipwx
	mkdir phylipwx/$(DISTDIR)
	mkdir phylipwx/$(DISTDIR)/exe
	for i in $(WX_EXES) ; do \
	  cp $$i phylipwx/$(DISTDIR)/exe ; \
	done
	@for i in $(ASCII_EXT) ; do \
	  echo "Translating newline characters on *$$i..." ; \
	  find phylipwx -name "*$$i" \
	    -exec sed -i -e 's/$$/\r/g' '{}' ';' ; \
	done

phylipwy.exe : phylipwy.zip
	cat $(SFX_STUB) phylipwy.zip > phylipwy.exe \
	  && chmod 755 phylipwy.exe

phylipwy.zip : phylipwydir
	@rm -f phylipwy.zip
	cd phylipwy && zip -q -r ../phylipwy.zip *
	rm -rf phylipwy

phylipwydir : $(WY_EXES)
	rm -rf phylipwy
	mkdir phylipwy
	mkdir phylipwy/$(DISTDIR)
	mkdir phylipwy/$(DISTDIR)/exe
	for i in $(WY_EXES) ; do \
	  cp $$i phylipwy/$(DISTDIR)/exe ; \
	done
	@for i in $(ASCII_EXT) ; do \
	  echo "Translating newline characters on *$$i..." ; \
	  find phylipwy -name "*$$i" \
	    -exec sed -i -e 's/$$/\r/g' '{}' ';' ; \
	done

sfx : dist
	@echo "Creating self-extracting zip archive $(DISTDIR).exe"
	cat $(SFX_STUB) $(DISTDIR).zip > $(DISTDIR).exe \
	  && chmod 755 $(DISTDIR).exe

dist : distdir
	-rm -rf $(DISTDIR).zip
	@echo "Creating ZIP archive $(DISTDIR).zip"
	zip -q -r $(DISTDIR).zip $(DISTDIR)
	rm -rf $(DISTDIR)
        

distdir : $(DIST_COMMON) $(DOCS) $(SOURCES) $(ICONS) $(WX_EXES) $(WY_EXES)
	-rm -rf $(DISTDIR)
	mkdir $(DISTDIR)
	mkdir $(DISTDIR)/doc
	mkdir $(DISTDIR)/exe
	mkdir $(DISTDIR)/src
	mkdir $(DISTDIR)/src/icons
	@echo "Copying common files to $(DISTDIR)..."
	@for i in $(DIST_COMMON) ; do \
	  cp $$i $(DISTDIR) ; \
	done 
	@echo "Copying sources to $(DISTDIR)/src..."
	@for i in $(SOURCES) ; do \
	  cp $$i $(DISTDIR)/src ; \
	done
	@echo "Copying icons to $(DISTDIR)/src/icons..."
	@for i in $(ICONS) ; do \
	  cp $$i $(DISTDIR)/src/icons ; \
	done
	@echo "Copying docs to $(DISTDIR)/docs..."
	@for i in $(DOCS) ; do \
	  cp $$i $(DISTDIR)/doc ; \
	done
	@echo "Copying executables to $(DISTDIR)/exe..."
	@for i in $(WX_EXES) $(WY_EXES) ; do \
	  cp $$i $(DISTDIR)/exe ; \
	done
	@for i in $(ASCII_EXT) ; do \
	  echo "Translating newline characters on *$$i..." ; \
	  find $(DISTDIR) -name "*$$i" \
	    -exec sed -i -e 's/$$/\r/g' '{}' ';' ; \
	done

distclean : clean
	@echo -n "Removing dists..."
	@for i in $(DISTDIR) $(DISTDIR).zip $(DISTDIR).exe $(DISTDIR).tar.gz \
	  phylipw.zip phylipwx.zip phylipwy.zip phylipw.exe phylipwx.exe phylipwy.exe ; do \
	  rm -rf $$i ; \
	done
	@echo "done."
	

