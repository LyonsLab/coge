            }
            else { // error occurred
                $('#progress_msg').hide();
                $('#finished_msg').hide();
                $('#error_msg').fadeIn();
                $('#ok_button').fadeIn();
            }
        }
    });
}

function toggle_load_log() { // TODO: shared with GenomeInfo.pl, move to module
	var btn = $('#log_button');
	var log = $('#log_contents');
	var spinner = $('#log_spinner');
	
	var setVisible = function(visible) { // TODO: i want to use jQuery.toggle() instead, oh well
    	if (visible) {
			log.removeClass('hidden');
	    	btn.html('Hide');
	    	spinner.animate({opacity:0});
    	}
    	else {
    		log.addClass('hidden');
    		btn.html('Show');
    		spinner.animate({opacity:0});
    	}
	}
	
	if (log.is(":hidden")) {
		if (log.html() == '') {
			spinner.css({opacity:1});
			$.ajax({
		        data: {
		            fname: 'get_load_log',
		            eid: eid
		        },
		        success: function(data) {
		        	if (data)
		        		log.html(data);
		        	else
		        		log.html('<span class="alert">Error: log file not found</span>');
		        	setVisible(true);
		        }
		    });
		}
		else
			setVisible(true);
	}
	else
		setVisible(false);
}

